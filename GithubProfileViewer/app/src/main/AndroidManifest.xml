<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ogbeoziomajnr.githubprofileviewer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.ogbeoziomajnr.githubprofileviewer.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.WelcomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainLayoutActivity"
            android:exported="true"
            android:label="@string/title_activity_main_layout"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>



</manifest>